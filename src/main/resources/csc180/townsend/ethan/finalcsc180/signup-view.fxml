<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="csc180.townsend.ethan.finalcsc180.Controller.SignupController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="textDisplay" text="Register User" textAlignment="CENTER" />
    <TextField fx:id="usernameField" promptText="Username" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>
    <TextField fx:id="passwordField" promptText="Password" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>

    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#onSignUpButtonClick" text="Sign Up" textAlignment="CENTER" HBox.hgrow="ALWAYS"/>
        <Button onAction="#onCancelButtonClick" text="Cancel" textAlignment="CENTER" HBox.hgrow="ALWAYS"/>
    </HBox>
</VBox>